<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JuegAlmi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.JuegAlmi" parent="Base.Theme.JuegAlmi" />

    <style name="estiloCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">155dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="estiloCardViewGaleria">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="estiloSubtitulo">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="estiloSubtitulo.margen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="estiloTextoFoto">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="estiloBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estiloTitulo">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="estiloTexto">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="estiloBottomNavigation">
        <item name="android:background">@color/colorTab</item>
        <item name="itemBackground">@color/bottom_navigation_bg</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_selector</item>
    </style>

    <style name="estiloTextoBottomNavigationInactivo">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="estiloTextoBottomNavigationActivo">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estiloImagen">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>