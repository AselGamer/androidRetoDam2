<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".botonesAbajo.SobreNosotros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:text="@string/Titulo5"
            style="@style/estiloTitulo"
            />

        <TextView
            android:layout_width="323dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/estiloTexto"
            android:text="Somos una pequeña empresa que en sus inicios se dedicaba al alquiler y venta de videojuegos."
            />

        <TextView
            android:layout_width="323dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/estiloTexto"
            android:text="Ahora no solo nos dedicamos a eso sino que también vendemos y arreglamos, consolas, smartphones y tablets."
            />

        <TextView
            android:layout_width="325dp"
            android:layout_height="85dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/estiloTexto"
            android:text="Contamos con una pequeña tienda física que se úbica en Bilbao, no dudes en venir a preguntarnos cualquier duda que tengas."
            />

        <TextView
            android:layout_width="323dp"
            android:layout_height="85dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            style="@style/estiloTexto"
            android:textStyle="bold"
            android:text="Síguenos en redes sociales para estar al tanto de todas nuestras novedades."
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgInstagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/instagram"
                />

            <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/twitter"
                />

            <ImageView
                android:id="@+id/imgTikTok"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/tiktok"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>